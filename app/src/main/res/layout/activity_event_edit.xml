<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/event_Edit"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="24dp"
                android:background="@layout/rounded_borders"
                android:ems="10"
                android:hint="Title "
                android:paddingBottom="@dimen/field_padding_zero"
                android:paddingLeft="60dp"
                android:paddingRight="@dimen/field_padding_zero"
                android:paddingTop="@dimen/field_padding_zero"
                android:textColor="@color/main_color"
                android:textColorHint="@color/main_color"
                tools:ignore="NotSibling"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/name"
                android:layout_marginTop="21dp"
                android:background="@layout/rounded_borders"
                android:ems="10"
                android:hint="Date"
                android:paddingBottom="@dimen/field_padding_zero"
                android:paddingLeft="60dp"
                android:paddingRight="@dimen/field_padding_zero"
                android:paddingTop="@dimen/field_padding_zero"
                android:textColor="@color/main_color"
                android:textColorHint="@color/main_color"
                android:layout_alignParentLeft="true" />




            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date"
                android:layout_marginTop="21dp"
                android:background="@layout/rounded_borders"
                android:ems="10"
                android:hint="Location"
                android:paddingBottom="@dimen/field_padding_zero"
                android:paddingLeft="60dp"
                android:paddingRight="@dimen/field_padding_zero"
                android:paddingTop="@dimen/field_padding_zero"
                android:textColor="@color/main_color"
                android:textColorHint="@color/main_color"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/time1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/location"
                android:layout_marginTop="21dp"
                android:background="@layout/rounded_borders"
                android:ems="10"
                android:hint="Time"
                android:paddingBottom="@dimen/field_padding_zero"
                android:paddingLeft="60dp"
                android:paddingRight="@dimen/field_padding_zero"
                android:paddingTop="@dimen/field_padding_zero"
                android:textColor="@color/main_color"
                android:textColorHint="@color/main_color"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/time2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/time1"
                android:layout_marginTop="21dp"
                android:background="@layout/rounded_borders"
                android:ems="10"
                android:hint="Time"
                android:paddingBottom="@dimen/field_padding_zero"
                android:paddingLeft="60dp"
                android:paddingRight="@dimen/field_padding_zero"
                android:paddingTop="@dimen/field_padding_zero"
                android:textColor="@color/main_color"
                android:textColorHint="@color/main_color"
                android:layout_alignParentLeft="true" />
            <EditText
                android:id="@+id/summaryed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/time2"
                android:layout_marginTop="21dp"
                android:background="@layout/rounded_borders"
                android:ems="10"
                android:hint="Event Details"
                android:paddingBottom="@dimen/field_padding_zero"
                android:paddingLeft="60dp"
                android:paddingRight="@dimen/field_padding_zero"
                android:paddingTop="@dimen/field_padding_zero"
                android:textColor="@color/main_color"
                android:textColorHint="@color/main_color"
                android:layout_alignParentLeft="true" />


            <Button
                android:id="@+id/edit_event"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/summaryed"
                android:layout_marginTop="21dp"
                android:background="@layout/rounded_borders_button"
                android:text="@string/save_edit"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true" />




        </RelativeLayout>
    </ScrollView>
</LinearLayout>